{
    "require": {
        "slim/psr7": "^1.5",
        "slim/slim": "4.*",
        "phpunit/phpunit": "^9.5.25",
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "slim/twig-view": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Setup\\": "setup/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
   "scripts": {
        "test": "phpunit",
        "post-update-cmd": [
            "App\\Setup\\Setup::doSetup",
            "phpunit"
        ],
        "post-install-cmd": [
            "App\\Setup\\Setup::doSetup",
            "phpunit"
        ]
    }
}
